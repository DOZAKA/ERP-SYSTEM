extends index_layout

block content
    .wrap
      .header
        .header-in
      .contents
        .content
          .img-area
            img.index-logo(src='./images/bi.png')
          .form-area
            form.index-form(method='post', action='/')
              input#login_id.input-box(type='text', name='id', placeholder='ID', data-required='required')
              input#login_password.input-box(type='password', name='password', placeholder='Password', data-required='required')
              button.form-btn(type='submit') SIGN IN
            button.form-btn SIGN UP
            .forgot-container
              | If you forgot your ID or password, Contact us.







