extends main_layout

append head
   link(rel='stylesheet', type='text/css', href='../stylesheets/bootstrap.min.css')
   link(rel='stylesheet', type='text/css', href='../stylesheets/flat-ui.css')
   link(rel='stylesheet', type='text/css', href='../stylesheets/animate.css')
   link(rel='stylesheet', type='text/css', href='../stylesheets/main_layout.css')
   link(rel='stylesheet', type='text/css', href='../stylesheets/fee_register.css')
   link(rel='stylesheet', type='text/css', href='../stylesheets/bootstrap-datepicker3.css')
   link(rel='stylesheet', type='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css')
block content
   .wrapper
      article.container
         h3 수입/지출 내역 등록
         hr
         .content
            table.table#addlist
               thead
                  tr
                     th 날짜
                     th 입출
                     th 내역
                     th 금액
                     th 추가
               tbody
                  tr
                     td
                        input.datepicker#date_0(type='text', placeholder='날짜', onclick='calendar(this)', readonly="readonly")
                     td
                        .btn-group
                           button#type_0.btn.dropdown-toggle(type='button', data-toggle='dropdown') 구분
                           ul.dropdown-menu
                              li#expense_0(onclick='expense(this.id)')
                                 a 지출
                              li#income_0(onclick='income(this.id)')
                                 a 수입
                     td
                        input#content_0(type='text', placeholder='내역')
                     td
                        input#price_0(type='text', placeholder='숫자만 입력', maxlength="8", onkeydown='isNumberKey(this)')
                     td
                        button#plus.btn.plusminus(type='button', onclick='addList()') +
               tfoot
                  tr
                     td(colspan='5')
                        button#submit.btn(type='button') 등록
            #registerList
               table.table.table-clickable.table-hover
                  thead
                     tr
                        th 날짜
                        th 입출
                        th 내역
                        th 금액
                  tbody
   .modal.fade
      .modal-dialog
         .modal-content
            .modal-header
               h4.modal-title 수입/지출정보
            .modal-body
               p 날짜
               h5#date
               p 입출
               h5#type
               p 내역
               h5#content
               p 금액
               h5#price
            .modal-footer
               button#deleteHistory.btn(type='button') 삭제
               button.btn(type='button', data-dismiss='modal') 닫기
append script
   script(src='../javascripts/bootstrap-datepicker.js')
   script(src='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js')
   script(src='../javascripts/fee_register_index.js')
