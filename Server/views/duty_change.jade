extends main_layout
append head
    link(rel='stylesheet', type='text/css', href='../stylesheets/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='../stylesheets/flat-ui.css')
    link(rel='stylesheet', type='text/css', href='../stylesheets/animate.css')
    link(rel='stylesheet', type='text/css', href='../stylesheets/main_layout.css')
    link(rel='stylesheet', type='text/css', href='../stylesheets/bootstrap-datepicker3.css')
    link(rel='stylesheet', type='text/css', href='../stylesheets/apply_newbook.css')
    link(rel='stylesheet', type='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css')
block content
    .title
        .container
            h2 당직 맞변경 신청
            h2#tmp
            button#showresult.btn.btn-default.btn-block(type='button') 맞변경 신청 결과 조회
    article.container
        .modal.fade
            .modal-dialog
                .modal-content
                    .modal-header
                        h4.modal-title 맞변경 신청 결과 조회
                    .modal-body
                        table#resultlist.table
                    .modal-footer
                        button.btn.btn-default(type='button', data-dismiss='modal') 닫기
        .row
            .col-xs-12.col-md-6
                h3 변경 신청자 1
                div
                    p#noduty.text-center
                    table.table.table-hover
                        tbody#memberList
            .col-xs-12.col-md-6
                h3 변경 신청자 2
                div
                    input.datepicker#date_picker(type='text', placeholder='여기를 클릭하여 날짜를 선택하여 주십시오.', readonly="readonly")
                    table.table.table-hover
                        tbody
                            tr
                                td#user_1.hidden
                            tr
                                td#user_2.hidden
                            tr
                                td#user_3.hidden
                            tr
                                td#user_4.hidden
        // Main component for a primary marketing message or call to action
        #memberinfo.hidden
            h3#requestmember1.text-center
            p.text-center 과 (와)
            h3#requestmember2.text-center
            h4#requestmessage.text-center
            button#request.btn.btn-lg.btn-primary.center-block(type='button') 신청
append script
    script(src='../javascripts/bootstrap-datepicker.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js')
    script(src='../javascripts/duty_change.js')
