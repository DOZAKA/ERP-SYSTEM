extends index_layout


block content
    .wrap
      .header
        .header-in
      .contents
        .content-signup
          .img-area
            img.index-logo(src='./images/bi.png')
          .form-area
            form#form.index-form(method='post', enctype='multipart/form-data', action='/signup')
              input#sign_up_id.input-box(type='text', name='id', placeholder='ID', data-required='required')
              input#sign_up_password.input-box(type='password', name='password', placeholder='비밀번호', data-required='required')
              input#sign_up_password_confirm.input-box(type='password', name='password_confirm', placeholder='비밀번호 확인', data-required='required')
              input#sign_up_name.input-box(type='text', name='username', placeholder='이름', data-required='required')
              input#sign_up_birth.input-box(type='text', name='birth', placeholder='생일 ex)900430', data-required='required')
              div
                input#sex_male(type='radio', name='sex_info', value='male', checked='checked')
                label(id='sign_up_male',for='sex_male') 남자
                input#sex_female(type='radio', name='sex_info', value='female')
                label(id='sign_up_female',for='sex_female') 여자
              input#sign_up_period.input-box(type='text', name='period', placeholder='기수 ex)25-2', data-required='required')
              input#sign_up_phone.input-box(type='tel', name='phone', placeholder='전화번호 ex)010XXXXXXXX', data-required='required')
              input#sign_up_mail.input-box(type='text', name='mail', placeholder='E-Mail', data-required='required')
              .form-img-upload
                input#sign_up_img.sign_up_imgfile(type='file', name='sign_up_img', accept='image/*')
                label#sign_up_img_label(for='sign_up_img') 사진 선택
              button#sign_up_button.form-btn(type='submit') SIGN UP
      script(src='http://code.jquery.com/jquery.min.js')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js')
      script(src='./javascripts/signup_index.js')