extends main_layout
append head
   link(rel='stylesheet', type='text/css', href='../stylesheets/bootstrap.min.css')
   link(rel='stylesheet', type='text/css', href='../stylesheets/flat-ui.css')
   link(rel='stylesheet', type='text/css', href='../stylesheets/animate.css')
   link(rel='stylesheet', type='text/css', href='../stylesheets/main_layout.css')
   link(rel='stylesheet', type='text/css', href='../stylesheets/vote_manage.css')
   link(rel='stylesheet', type='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css')
block content
   .wrapper
      article.container
         h3 투표 관리
         hr
         .content
            button#add.btn.addVote(type='button') 투표 추가
            table#voteList.table.table-clickable
               thead
                  tr
                     th 제목
                     th 작성자
                     th 마감일
                     th 상태
               tbody
   #addVote
      .modal.fade
         .modal-dialog
            .modal-content
               .modal-header
                  h4.modal-title 투표 추가
               .modal-body
               .modal-footer
                  button#voteAdd.btn(type='button') 추가
                  button.btn(type='button', data-dismiss='modal') 닫기
   #editVote
      .modal.fade
         .modal-dialog
            .modal-content
               .modal-header
                  h4.modal-title 투표 수정
               .modal-body
               .modal-footer
                  button.btn(type='button') 수정
                  button.btn(type='button') 삭제
                  button.btn(type='button', data-dismiss='modal') 닫기
append script
   script(src='https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js')
   script(src='../javascripts/vote_manage_index.js')